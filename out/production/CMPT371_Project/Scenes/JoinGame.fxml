<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: skyblue;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JoinGameController">
   <children>
      <Label layoutX="203.0" layoutY="31.0" prefHeight="43.0" prefWidth="194.0" text="JOIN GAME" textAlignment="CENTER">
         <font>
            <Font name="Georgia Bold" size="30.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="350.0" mnemonicParsing="false" onAction="#switchToMainPage" prefHeight="35.0" prefWidth="82.0" text="Back" />
