      <TextField fx:id="inputText" layoutX="185.0" layoutY="152.0" prefHeight="0.0" prefWidth="206.0" promptText="ex. 123.45.789.6" />
      <Label layoutX="222.0" layoutY="133.0" text="Type the Host IP address">
         <font>
            <Font name="Georgia" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="portInput" layoutX="214.0" layoutY="209.0" promptText="ex. 6000" />
      <Label layoutX="253.0" layoutY="190.0" text="Port Number">
         <font>
            <Font name="Georgia" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
